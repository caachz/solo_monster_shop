<%= form_for @user, url: users_path do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name, value: @user.name%>

  <%= f.label :street_address %>
  <%= f.text_field :street_address, value: @user.street_address%>

  <%= f.label :city %>
  <%= f.text_field :city, value: @user.city %>

  <%= f.label :state %>
  <%= f.text_field :state, value: @user.state %>

  <%= f.label :zip %>
  <%= f.text_field :zip, value: @user.zip %>

  <%= f.label :email %>
  <%= f.email_field :email, value: nil %>

  <% if current_user == nil %>
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  <% end %>

  <%= f.submit button_text %>
<% end %>
