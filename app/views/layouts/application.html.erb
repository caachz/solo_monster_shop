<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <% if current_user != nil %>
        <span>Logged in as <%= current_user.name %></span>
        <%= link_to "My Profile", "/profile"%>
        <%= link_to "Logout", "/logout", method: :delete %>
          <% if current_user = "MerchantEmployee" %>
            <%= link_to "Merchant Dashboard" %>
          <% end %>
      <% else %>
        <%= link_to "Login", "/login"%>
        <%= link_to "Register", "/register"%>
      <% end %>
      <%= link_to "Home Page", "/"%>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <%= link_to "Cart: #{cart.total_items}", "/cart" %>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
