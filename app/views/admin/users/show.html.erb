<h2>Welcome to <%= "#{@user.name}" %>'s Profile</h2>

<section id="user-info">
  <table>
    <tr>
      <td>Email:</td>
      <td><%= @user.email %></td>
    </tr>

    <tr>
      <td>Name:</td>
      <td><%= @user.name %></td>
    </tr>

    <tr>
      <td>Address:</td>
      <td><%= @user.street_address %>, <%= @user.city %> <%= @user.state %>, <%= @user.zip %></td>
    </tr>

    <tr>
      <td>Account Level:</td>
      <td><%= @user.role %></td>
    </tr>
  </table>
  <br>
</section>
